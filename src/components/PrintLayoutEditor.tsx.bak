export default function PrintLayoutEditor({ questions, templateTitle, templateId, productionId, troupeName, onBack }: Props) {
    const [mousePos, setMousePos] = useState<{ x: number; y: number } | null>(null);
    const [showMarkers, setShowMarkers] = useState(true);
    const [layoutMode, setLayoutMode] = useState<'vertical' | 'horizontal'>('horizontal');
    const canvasAreaRef = useRef<HTMLDivElement>(null);

    // QRã‚³ãƒ¼ãƒ‰ç”¨URLç”Ÿæˆ
    const qrUrl = typeof window !== 'undefined'
        ? `${window.location.origin}/book/${productionId}/survey?tid=${templateId}&mode=paper_scan`
        : '';

    // è‡ªå‹•ãƒ¬ã‚¤ã‚¢ã‚¦ãƒˆè¨ˆç®—ï¼šHeader + questions â†’ é…ç½®åº§æ¨™
    const { headerLayout, questionLayouts, isOverflow, finalParams } = useMemo(() => {
        const blockW = A4_WIDTH_MM - MARGIN_MM * 2; // 180mmå›ºå®š
        const greetingText = 'ã”æ¥å ´ã„ãŸã ãèª ã«ã‚ã‚ŠãŒã¨ã†ã”ã–ã„ã¾ã™ã€‚ä»Šå¾Œã®æ´»å‹•ã®åŠ±ã¿ã¨ãªã‚Šã¾ã™ã®ã§ã‚¢ãƒ³ã‚±ãƒ¼ãƒˆã¸ã®ã”å›ç­”ã‚’ãŠé¡˜ã„è‡´ã—ã¾ã™ã€‚';
        const greetingH = estimateTextHeight(greetingText, HEADER_TEXT_FONT_SIZE_MM, blockW);

        // 1. Measure (ãƒ‘ãƒ¼ãƒ„ã®å›ºå®šé«˜åº¦ã‚’ç®—å‡º)
        // â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
        const headerH = 33 + greetingH + HEADER_MARGIN_BOTTOM_MM; // HEADER_START_Y_MM ã‹ã‚‰ã®ç›¸å¯¾
        const qParts = questions.filter(
            q => q.type === 'single_choice' || q.type === 'multi_choice' || q.type === 'rating_scale' || q.type === 'free_text'
        );
        const newsQ = questions.find(q => q.type === 'newsletter_optin');

        const qHeights = qParts.map(q => {
            const fullTitle = q.label + (q.type === 'multi_choice' ? 'ï¼ˆè¤‡æ•°é¸æŠå¯ï¼‰' : '');
            const titleH = estimateTextHeight(fullTitle, OMR_FONT_SIZE_MM, blockW);
            let itemH = 0;
            if (q.type === 'rating_scale') {
                const labelMaxW = (blockW - (5 - 1) * RATING_NUM_GAP_MM) / 2 - 5;
                const charW = estimateTextWidth('ã‚', RATING_LABEL_FONT_SIZE_MM);
                const maxLines = Math.max(
                    Math.ceil(((q.minLabel || '').length * charW) / labelMaxW),
                    Math.ceil(((q.maxLabel || '').length * charW) / labelMaxW),
                    1
                );
                const contentAreaH = Math.max(RATING_HIT_AREA_MM, maxLines * 4.5);
                itemH = GAP_INNER_RATING + contentAreaH + 6;
            } else if (q.type === 'free_text') {
                itemH = 0; // fH ã§å¾Œã‹ã‚‰åŠ ç®—
            } else {
                if (layoutMode === 'vertical') {
                    itemH = q.options.length * OMR_LINE_HEIGHT_MM;
                } else {
                    // æ°´å¹³é…ç½®ã®é«˜åº¦è¦‹ç©ã‚‚ã‚Š (æŠ˜ã‚Šè¿”ã—ã‚·ãƒŸãƒ¥ãƒ¬ãƒ¼ã‚·ãƒ§ãƒ³)
                    const boxPlusTextGap = OMR_BOX_SIZE_MM + OMR_GAP_MM;
                    const optionGap = OMR_H_OPTION_GAP_MM;
                    let rows = 1;
                    let curRowW = 0;
                    q.options.forEach(opt => {
                        const labelW = estimateTextWidth(opt.label, OMR_FONT_SIZE_MM);
                        const optW = boxPlusTextGap + labelW + optionGap;
                        if (curRowW + optW > blockW && curRowW > 0) { // If adding this option exceeds blockW and it's not the first option in a row
                            rows++;
                            curRowW = optW; // Start new row with this option's width
                        } else {
                            curRowW += optW; // Add to current row
                        }
                    });
                    itemH = rows * OMR_LINE_HEIGHT_MM;
                }
            }
            return { titleH, itemH };
        });

        let footerH = 0;
        let newsTitleH = 0;
        if (newsQ) {
            const title = 'ä»Šå¾Œã®å…¬æ¼”æƒ…å ±ã‚„ãŠçŸ¥ã‚‰ã›ã®é…ä¿¡ã‚’å¸Œæœ›ã—ã¾ã™ã‹ï¼Ÿ';
            newsTitleH = estimateTextHeight(title, OMR_FONT_SIZE_MM, blockW);
            footerH = newsTitleH + 4.0 + OMR_BOX_SIZE_MM + 6;
            if (newsQ.subFields) {
                if (newsQ.subFields.name) footerH += 10 + 4;
                if (newsQ.subFields.email) footerH += 10 + 4;
            }
        }

        // 2. Calculate (ä½™ç™½åˆ†é…ã¨ã‚¹ã‚±ãƒ¼ãƒªãƒ³ã‚°)
        // â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
        const IDEAL_SG = 7.0; const MIN_SG = 0.0; // æ¥µé™åœ§ç¸®ï¼šæœ€å° 0mm
        const IDEAL_H2C = 10.0; const MIN_H2C = 0.0;
        const IDEAL_IG = 4.0; const MIN_IG = 0.0;
        const IDEAL_FT = 35.0; const MIN_FT = 15.0; // è‡ªç”±è¨˜è¿°ã‚‚ 15mm ã¾ã§
        const H_MAX = 267.0;

        const gapCount = qParts.length + (newsQ ? 0 : -1); // è¨­å•é–“ + (æœ€å¾Œã®è¨­å•ã€œãƒ•ãƒƒã‚¿ãƒ¼é–“ã¯ Justify ã§åºƒã’ã‚‹ãŒã€åŸºæœ¬ã¯ SG)
        const freeTextCount = qParts.filter(q => q.type === 'free_text').length;

        // ç†æƒ³çŠ¶æ…‹ã§ã®åˆè¨ˆé«˜åº¦ç®—å‡º
        const hFixedTotal = headerH + qHeights.reduce((s, c) => s + c.titleH + c.itemH, 0) + footerH;
        let hTotalIdeal = hFixedTotal + IDEAL_H2C + (gapCount * IDEAL_SG) + (freeTextCount * IDEAL_FT) + (qParts.length * IDEAL_IG);

        let curSG = IDEAL_SG; let curH2C = IDEAL_H2C; let curIG = IDEAL_IG; let curFT = IDEAL_FT;
        let overflowAmount = hTotalIdeal - H_MAX;

        // ç¬¬1æ®µéš: ç†è«–ä¸Šã® MIN å€¤ï¼ˆ0.0mm ç­‰ï¼‰ã¾ã§å„ªå…ˆé †ã«ç¸®å°
        if (overflowAmount > 0) {
            const sgShrinkMax = (IDEAL_SG - MIN_SG) * gapCount;
            const sgReduction = Math.min(overflowAmount, sgShrinkMax);
            curSG -= (gapCount > 0) ? sgReduction / gapCount : 0;
            overflowAmount -= sgReduction;

            if (overflowAmount > 0) {
                const h2cShrinkMax = IDEAL_H2C - MIN_H2C;
                const h2cReduction = Math.min(overflowAmount, h2cShrinkMax);
                curH2C -= h2cReduction;
                overflowAmount -= h2cReduction;
            }
            if (overflowAmount > 0) {
                const igShrinkMax = (IDEAL_IG - MIN_IG) * qParts.length;
                const igReduction = Math.min(overflowAmount, igShrinkMax);
                curIG -= (qParts.length > 0) ? igReduction / qParts.length : 0;
                overflowAmount -= igReduction;
            }
            if (overflowAmount > 0 && freeTextCount > 0) {
                const ftShrinkMax = (IDEAL_FT - MIN_FT) * freeTextCount;
                const ftReduction = Math.min(overflowAmount, ftShrinkMax);
                curFT -= ftReduction / freeTextCount;
                overflowAmount -= ftReduction;
            }
        } else if (gapCount > 0) {
            // ä½™è£•ãŒã‚ã‚‹å ´åˆã¯ Justify (SG ã‚’åºƒã’ã‚‹)
            curSG += (-overflowAmount) / (gapCount + 1);
        }

        // ç¬¬2æ®µéš: ãã‚Œã§ã‚‚æº¢ã‚Œã‚‹å ´åˆã€ç‰©ç†é™ç•Œ 0.0mm ã¾ã§å…¨ã‚®ãƒ£ãƒƒãƒ—ã‚’ä¸€å¾‹å¼·åˆ¶ç¸®å° (LINEAR REFIT)
        if (overflowAmount > 0.1) { // ã‚ãšã‹ãªèª¤å·®ã‚’è¨±å®¹
            const HARD_MIN = 0.0;
            const totalGapsCount = gapCount + 1/*H2C*/ + qParts.length/*IG*/;
            if (totalGapsCount > 0) {
                const perGapReduction = overflowAmount / totalGapsCount;
                curSG = Math.max(HARD_MIN, curSG - perGapReduction);
                curH2C = Math.max(HARD_MIN, curH2C - perGapReduction);
                curIG = Math.max(HARD_MIN, curIG - perGapReduction);
                // FreeText ã‚‚ã•ã‚‰ã« 20mm ã¾ã§ãªã‚‰å‰Šã‚‹ã“ã¨ã‚’è¨±å®¹
                if (freeTextCount > 0) {
                    curFT = Math.max(10.0, curFT - perGapReduction);
                }
            }
        }

        // 3. Draw (é…ç½®ã®ç¢ºå®š)
        // â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
        const layouts: QuestionLayout[] = [];
        let curY = HEADER_START_Y_MM + headerH + curH2C;

        qParts.forEach((q, idx) => {
            const { titleH, itemH: fixedItemH } = qHeights[idx];
            const itemActualH = (q.type === 'free_text') ? curFT : fixedItemH;
            const blockHeight = titleH + curIG + itemActualH;

            if (q.type === 'rating_scale') {
                const ratingBoxes: RatingBoxMeta[] = [];
                const numStartX = (blockW * 0.5) - (((5 - 1) * RATING_NUM_GAP_MM) / 2);
                const numY = curY + titleH + curIG + (fixedItemH - 6) / 2; // æ³¨é‡ˆåˆ†ã®6ã‚’å¼•ã„ãŸä¸­å¤®
                for (let v = 1; v <= 5; v++) {
                    ratingBoxes.push({
                        questionId: q.id, value: v, type: 'RATING_BOX' as const,
                        boundingBox: {
                            x: MARGIN_MM + numStartX + (v - 1) * RATING_NUM_GAP_MM - RATING_HIT_AREA_MM / 2,
                            y: numY - RATING_HIT_AREA_MM / 2,
                            w: RATING_HIT_AREA_MM, h: RATING_HIT_AREA_MM
                        }
                    });
                }
                layouts.push({ question: q, questionIndex: idx + 1, x: MARGIN_MM, y: curY, width: blockW, height: blockHeight, titleHeight: titleH, ratingBoxes });
            } else if (q.type === 'free_text') {
                const ocrBoxes: OCRBoxMeta[] = [{
                    questionId: q.id, type: 'OCR_BOX' as const,
                    boundingBox: { x: MARGIN_MM, y: curY + titleH + curIG, w: blockW, h: curFT }
                }];
                layouts.push({ question: q, questionIndex: idx + 1, x: MARGIN_MM, y: curY, width: blockW, height: blockHeight, titleHeight: titleH, ocrBoxes });
            } else {
                const boxes: OMRBoxMeta[] = [];
                const internalY = curY + titleH + curIG;
                if (layoutMode === 'vertical') {
                    q.options.forEach((opt, i) => {
                        boxes.push({ questionId: q.id, optionId: opt.id, type: 'OMR_BOX' as const, boundingBox: { x: MARGIN_MM, y: internalY + i * OMR_LINE_HEIGHT_MM, w: OMR_BOX_SIZE_MM, h: OMR_BOX_SIZE_MM } });
                    });
                } else {
                    let cX = 0; let cY = 0;
                    const boxPlusTextGap = OMR_BOX_SIZE_MM + OMR_GAP_MM;
                    const optionGap = OMR_H_OPTION_GAP_MM;

                    q.options.forEach((opt) => {
                        const labelW = estimateTextWidth(opt.label, OMR_FONT_SIZE_MM);
                        const optW = boxPlusTextGap + labelW + optionGap;

                        if (cX + optW > blockW && cX > 0) { // If adding this option exceeds blockW and it's not the first option in a row
                            cX = 0;
                            cY += OMR_LINE_HEIGHT_MM;
                        }
                        boxes.push({
                            questionId: q.id, optionId: opt.id, type: 'OMR_BOX' as const,
                            boundingBox: { x: MARGIN_MM + cX, y: internalY + cY, w: OMR_BOX_SIZE_MM, h: OMR_BOX_SIZE_MM }
                        });
                        cX += optW;
                    });
                }
                layouts.push({ question: q, questionIndex: idx + 1, x: MARGIN_MM, y: curY, width: blockW, height: blockHeight, titleHeight: titleH, boxes });
            }
            curY += blockHeight + curSG;
        });

        // ç½²åæ¬„
        if (newsQ) {
            const fY = CONTENT_AREA.bottom - footerH;
            const ocrBoxes: OCRBoxMeta[] = [];
            const boxes: OMRBoxMeta[] = [];
            const optInY = fY + newsTitleH + 4.0;
            boxes.push({ questionId: newsQ.id, optionId: 'opt_in', type: 'OMR_BOX' as const, boundingBox: { x: MARGIN_MM, y: optInY, w: OMR_BOX_SIZE_MM, h: OMR_BOX_SIZE_MM } });
            let subY = optInY + OMR_BOX_SIZE_MM + 6;
            if (newsQ.subFields) {
                if (newsQ.subFields.name) {
                    ocrBoxes.push({ questionId: newsQ.id, fieldKey: 'name', type: 'OCR_BOX' as const, boundingBox: { x: MARGIN_MM + 40, y: subY, w: 120, h: 10 } });
                    subY += 10 + curIG * 0.8;
                }
                if (newsQ.subFields.email) {
                    ocrBoxes.push({ questionId: newsQ.id, fieldKey: 'email', type: 'OCR_BOX' as const, boundingBox: { x: MARGIN_MM + 40, y: subY, w: 120, h: 10 } });
                }
            }
            layouts.push({ question: newsQ, questionIndex: qParts.length + 1, x: MARGIN_MM, y: fY, width: blockW, height: footerH, titleHeight: newsTitleH, ocrBoxes, boxes });
        }

        // å³æ ¼ãªè¡çªåˆ¤å®š (isOverlapping)
        // â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
        let overlappingFound = false;
        // è¨­å•åŒå£«ã®è¡çªãƒã‚§ãƒƒã‚¯
        for (let i = 0; i < layouts.length - 1; i++) {
            const current = layouts[i];
            const next = layouts[i + 1];
            // åŒä¸€ãƒ–ãƒ­ãƒƒã‚¯å†…ã®é‡ãªã‚Šåˆ¤å®šï¼ˆIG ãŒãƒã‚¤ãƒŠã‚¹ã«ãªã‚‹ãªã©ï¼‰ã¯åŸç†ä¸Šç„¡ã„ã®ã§ã€ãƒ–ãƒ­ãƒƒã‚¯ä¸‹ç«¯ã¨æ¬¡ãƒ–ãƒ­ãƒƒã‚¯ä¸Šç«¯ã‚’æ¯”è¼ƒ
            if (current.y + current.height > next.y + 0.01) { // 0.01mm ã®è¨±å®¹èª¤å·®
                overlappingFound = true;
                break;
            }
        }
        // ã‚³ãƒ³ãƒ†ãƒ³ãƒ„ã‚¨ãƒªã‚¢ä¸‹ç«¯ã¨ã®è¡çª
        const lastLayout = layouts[layouts.length - 1];
        if (lastLayout && lastLayout.y + lastLayout.height > CONTENT_AREA.bottom + 0.1) { // 0.1mm ã®è¨±å®¹èª¤å·®
            overlappingFound = true;
        }


        const header: HeaderLayout = {
            troupeName: troupeName || 'åŠ‡å›£å', productionName: templateTitle || 'å…¬æ¼”å', greeting: greetingText, qrUrl,
            boundingBoxes: {
                titleGroup: { x: MARGIN_MM, y: HEADER_START_Y_MM + 2, w: blockW, h: 26 },
                greeting: { x: MARGIN_MM, y: HEADER_START_Y_MM + 33, w: blockW, h: greetingH },
                qrGroup: { x: CONTENT_AREA.right - QR_SIZE_MM - 15, y: HEADER_START_Y_MM + 2, w: QR_SIZE_MM + 12, h: 26 }
            }
        };

        const fParams: FinalParams = { sGap: curSG, h2cGap: curH2C, iGap: curIG, fH: curFT, hTotalIdeal };
        return { headerLayout: header, questionLayouts: layouts, isOverflow: overlappingFound, finalParams: fParams };
    }, [questions, layoutMode, qrUrl, templateTitle, troupeName]);

    const handleMouseMove = useCallback((e: React.MouseEvent<HTMLDivElement>) => {
        const target = e.currentTarget.querySelector('[data-canvas]') as HTMLElement | null;
